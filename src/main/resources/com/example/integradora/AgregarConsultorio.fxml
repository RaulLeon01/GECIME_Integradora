<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/forms.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.ConsultorioFormController">

    <!-- Encabezado -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="60" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <!-- Contenido -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="15" styleClass="padded-container">
            <Label styleClass="title-label" text="Nuevo consultorio" textAlignment="CENTER" />
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <!-- Nombre del Consultorio -->
            <Label styleClass="form-label" text="Nombre del Consultorio:" />
            <TextField fx:id="nombreConsultorioField" maxWidth="300" promptText="Ingrese el nombre" styleClass="form-textfield" />

            <!-- Ubicación -->
            <Label styleClass="form-label" text="Ubicación:" />
            <TextField fx:id="ubicacionField" maxWidth="300" promptText="Ingrese la ubicación" styleClass="form-textfield" />

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#onCancelarClick" styleClass="cancel-button" text="Cancelar" />
                <Button onAction="#onGuardarClick" styleClass="primary-button" text="Guardar" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
