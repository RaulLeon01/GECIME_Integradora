<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/historialPacientes.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.HistorialPacientesController">

    <!-- Encabezado -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <!-- Cuerpo principal -->
    <center>
        <HBox alignment="TOP_LEFT" fillHeight="true" spacing="0" stylesheets="@../styles/historialPacientes.css">

            <!-- Menú lateral -->
            <VBox prefWidth="160" spacing="10" styleClass="side-menu">
                <padding>
                    <Insets bottom="20" left="15" right="15" top="30" />
                </padding>

                <Button fx:id="btnPerfil" onAction="#irAVistaPerfil" styleClass="menu-button" text="Perfil" />
                <Button fx:id="btnEnCurso" onAction="#irAVistaEnCurso" styleClass="menu-button" text="En curso" />
                <Button fx:id="btnHistorialPacientes" onAction="#irAVistaHistorialPacientes" styleClass="menu-button" text="Historial &#13;&#10;pacientes" />
                <Pane prefHeight="200.0" prefWidth="200.0" />
                <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" styleClass="logout-button" text="Cerrar sesión" />
            </VBox>

            <!-- Contenido principal -->
            <VBox alignment="TOP_CENTER" spacing="20" styleClass="content-box" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="30" left="30" right="30" top="30" />
                </padding>

                <Label styleClass="section-title" text="Historial de pacientes" />

                <!-- Barra de búsqueda -->
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="search-box">
                    <Label styleClass="search-label" text="Matrícula paciente:" />
                    <TextField fx:id="campoMatricula" styleClass="search-field" />
                    <Button onAction="#buscarCitasPorMatricula" styleClass="search-button" text="Buscar" />
                </HBox>

                <!-- Tabla de citas -->
                <TableView fx:id="tablaCitas" styleClass="historial-table" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colMatricula" styleClass="table-column" text="Matrícula" />
                        <TableColumn fx:id="colNombre" styleClass="table-column" text="Nombre" />
                        <TableColumn fx:id="colDoctor" styleClass="table-column" text="Doctor" />
                        <TableColumn fx:id="colFecha" styleClass="table-column" text="Fecha" />
                        <TableColumn fx:id="colHora" styleClass="table-column" text="Hora" />
                        <TableColumn fx:id="colMalestar" styleClass="table-column" text="Malestar" />
                        <TableColumn fx:id="colObservaciones" styleClass="table-column" text="Observaciones" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>
</BorderPane>
