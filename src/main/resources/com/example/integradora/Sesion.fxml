<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/sesion.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.HelloController">

    <!-- Top bar -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <!-- Center content -->
    <center>
        <VBox alignment="TOP_CENTER" fillWidth="true" spacing="25" styleClass="main-container" stylesheets="@../styles/sesion.css">
            <Label styleClass="title-label" text="Inicio de Sesión" />

            <!-- Logo + texto -->
            <HBox alignment="CENTER" spacing="20">
                <ImageView fitHeight="120" fitWidth="350" preserveRatio="true" styleClass="logo-image">
                    <image>
                        <Image url="@image1.png" />
                    </image>
                </ImageView>
            </HBox>

            <!-- Formulario -->
            <VBox alignment="CENTER" maxWidth="400" spacing="15" styleClass="form-container">
                <Label styleClass="form-label" text="Ingresa tu usuario" />
                <TextField fx:id="usuarioField" promptText="Matricula / Cedula" styleClass="form-textfield" />

                <Label styleClass="form-label" text="Ingresa tu contraseña" />
                <PasswordField fx:id="contraseñaField" promptText="*******" styleClass="form-textfield" />

                <Hyperlink onAction="#onOlvidasteContrasenaClick" styleClass="hyperlink" text="¿Olvidaste tu contraseña?" />
            </VBox>

            <!-- Botón -->
            <Button onAction="#onLoginButtonClick" styleClass="primary-button" text="Iniciar Sesión" />

            <!-- Registro -->
            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="secondary-text" text="¿No tienes cuenta? regístrate ahora" />
                <Hyperlink onAction="#onIrARegistroClick" styleClass="hyperlink" text="Da clic aquí" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
