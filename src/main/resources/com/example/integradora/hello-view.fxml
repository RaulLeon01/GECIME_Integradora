<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.HelloController">

    <!-- Top bar -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" style="-fx-background-color: #2F4F76; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="SISTEMA GESTOR DE CITAS MEDICAS | GECIME">
            <BorderPane.margin>
                <Insets bottom="10" top="0" />
            </BorderPane.margin>
        </Label>
    </top>

    <!-- Center content -->
    <center>
        <VBox alignment="TOP_CENTER" fillWidth="true" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Inicio de Sesión" />

            <!-- Logo + texto -->
            <HBox alignment="CENTER" spacing="20">

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: gray;" text="GECIME&#10;SISTEMA GESTOR&#10;DE CITAS MÉDICAS" />
                <ImageView disable="true" fitHeight="100" fitWidth="100" focusTraversable="true" preserveRatio="true" smooth="false">
               <image>
                  <Image url="@image1.png" />
               </image></ImageView>
            </HBox>

            <!-- Formulario -->
            <VBox alignment="CENTER" maxWidth="400" spacing="10">
                <Label text="Ingresa tu usuario" />
                <TextField maxWidth="Infinity" promptText="No Empleado, Matrícula" />

                <Label text="Ingresa tu contraseña" />
                <PasswordField maxWidth="Infinity" promptText="*******" />

                <Label style="-fx-text-fill: gray;" text="¿Olvidaste tu contraseña?" />
            </VBox>

            <!-- Botón -->
            <Button style="-fx-background-color: #4CB5A4; -fx-text-fill: white; -fx-padding: 10 20 10 20;" text="Iniciar Sesión" />

            <!-- Registro -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="¿No tienes cuenta? regístrate ahora" />
                <Hyperlink text="Da clic aquí" />
            </HBox>
        </VBox>
    </center>

    <padding>
        <Insets bottom="20" left="30" right="30" top="20" />
    </padding>
</BorderPane>
