<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/perfilUsuario.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.VerDoctorController">

    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <center>
        <StackPane>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane">
                <StackPane alignment="TOP_CENTER">
                    <VBox alignment="TOP_CENTER" maxWidth="800" spacing="20" styleClass="content-box">
                        <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>

                        <!-- Perfil -->
                        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="profile-container">
                            <ImageView fitHeight="120" fitWidth="120" preserveRatio="true" styleClass="profile-image">
                                <image><Image url="@image3.png" /></image>
                            </ImageView>
                            <VBox alignment="CENTER_LEFT" spacing="8" styleClass="profile-info-original">
                                <Label fx:id="nombreLabel" styleClass="profile-name" text="Nombre del médico" />
                                <Label fx:id="rolLabel" styleClass="profile-detail" text="Usuario" />
                            </VBox>
                        </HBox>

                        <!-- Título -->
                        <Label styleClass="section-title-original" text="Información del médico" />

                        <!-- Info -->
                        <GridPane hgap="20" styleClass="info-grid-original" vgap="15">
                            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

                            <Label styleClass="info-label-original" text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label styleClass="info-label-original" text="Especialidad:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label fx:id="correoLabel" styleClass="info-value" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <Label fx:id="especialidadLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label styleClass="info-label-original" text="Consultorio:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <Label fx:id="consultorioLabel" styleClass="info-value" GridPane.columnIndex="0" GridPane.rowIndex="3" />

                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <!-- Botones -->
                        <HBox alignment="CENTER" spacing="20">
                            <Button fx:id="btnRegresar" onAction="#onVolverClick" styleClass="cancel-button" text="Regresar" />
                            <Button fx:id="btnModificar" onAction="#onModificarInfoClick" styleClass="primary-button" text="Modificar info" />
                        </HBox>

                    </VBox>
                </StackPane>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>
