<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/perfilUsuario.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.PerfilMedicoController">

    <!-- Top bar -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <!-- Main Content -->
    <center>
        <HBox alignment="TOP_LEFT" fillHeight="true" spacing="0" stylesheets="@../styles/perfilUsuario.css">

            <!-- Menú lateral -->
            <VBox prefWidth="160" spacing="10" styleClass="side-menu-original">
                <padding>
                    <Insets bottom="20" left="15" right="15" top="30" />
                </padding>
                <Button fx:id="btnPerfil" onAction="#irAVistaPerfil" styleClass="menu-button-original" text="Perfil" />
                <Button fx:id="btnEnCurso" onAction="#irAVistaEnCurso" styleClass="menu-button-original" text="En curso" />
                <Button fx:id="btnHistorialPacientes" onAction="#irAVistaHistorialPacientes" styleClass="menu-button-original" text="Historial &#13;&#10;pacientes" />
                <Pane prefHeight="200.0" prefWidth="200.0" />
                <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" styleClass="logout-button" text="Cerrar sesión" />
            </VBox>

            <!-- Contenido centrado horizontalmente -->
            <StackPane HBox.hgrow="ALWAYS">
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane">
                    <StackPane alignment="TOP_CENTER">
                        <VBox alignment="TOP_CENTER" maxWidth="800" spacing="20" styleClass="content-box">
                            <padding>
                                <Insets bottom="30" left="30" right="30" top="30" />
                            </padding>

                            <!-- Sección perfil médico -->
                            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="profile-container">
                                <ImageView fitHeight="120" fitWidth="120" preserveRatio="true" styleClass="profile-image">
                                    <image>
                                        <Image url="@image3.png" />
                                    </image>
                                </ImageView>

                                <VBox alignment="CENTER_LEFT" spacing="8" styleClass="profile-info-original">
                                    <Label fx:id="nombreLabel" styleClass="profile-name" text="Nombre" />
                                    <Label fx:id="matriculaLabel" styleClass="profile-detail" text="Usuario" />
                                </VBox>
                            </HBox>

                            <!-- Título sección -->
                            <Label styleClass="section-title-original" text="Información del médico" />

                            <!-- Información médica -->
                            <GridPane hgap="20" styleClass="info-grid-original" vgap="15">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>

                                <Label styleClass="info-label-original" text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label fx:id="emailLabel" styleClass="info-value" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                                <Label styleClass="info-label-original" text="Especialidad:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label fx:id="especialidadLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label styleClass="info-label-original" text="Consultorio:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label fx:id="consultorioLabel" styleClass="info-value" GridPane.columnIndex="0" GridPane.rowIndex="3" />



                                <columnConstraints>
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>
                        </VBox>
                    </StackPane>
                </ScrollPane>
            </StackPane>
        </HBox>
    </center>
</BorderPane>
