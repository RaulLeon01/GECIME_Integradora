<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/forms.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.TomarCitaController">

    <!-- Barra superior -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <!-- Contenido principal - ahora correctamente centrado -->
    <center>
        <VBox alignment="TOP_CENTER" styleClass="spaced-container padded-container" stylesheets="@../styles/forms.css">
            <Label styleClass="title-label" text="Tomar Cita del Paciente" />

            <!-- GridPane centrado con ancho máximo -->
            <GridPane maxWidth="800" styleClass="form-grid centered-form">
                <!-- Fila 1 -->
                <Label styleClass="form-label" text="Nombre del paciente:" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <GridPane.margin>
                  <Insets bottom="20.0" right="10.0" />
               </GridPane.margin></Label>
                <Label fx:id="nombrePacienteLabel" styleClass="form-value" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0">
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin></Label>

                <!-- Fila 2 -->
                <Label styleClass="form-label" text="Motivo del malestar:" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="20.0" right="10.0" />
               </GridPane.margin></Label>
                <Label fx:id="malestarLabel" styleClass="form-value" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin></Label>

                <!-- Fila 3 -->
                <Label styleClass="form-label" text="Fecha de la cita:" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="20.0" right="10.0" />
               </GridPane.margin></Label>
                <Label fx:id="fechaLabel" styleClass="form-value" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin></Label>

                <Label styleClass="form-label" text="Hora de la cita:" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="20.0" left="10.0" right="10.0" />
               </GridPane.margin></Label>
                <Label fx:id="horaLabel" styleClass="form-value" GridPane.columnIndex="3" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin></Label>

                <!-- Fila 4 -->
                <Label styleClass="form-label" text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin></Label>
                <TextArea fx:id="observacionesArea" styleClass="form-textarea" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />

                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                </rowConstraints>
            </GridPane>

            <!-- Botones centrados -->
            <HBox alignment="CENTER" spacing="20" styleClass="button-container">
                <Button fx:id="btnRegresar" onAction="#irAVistaPerfil" styleClass="cancel-button" text="Regresar" />
                <Button fx:id="btnFinalizar" onAction="#finalizarCita" styleClass="primary-button" text="Finalizar" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
