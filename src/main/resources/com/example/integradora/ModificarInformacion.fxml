<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/forms.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.ModificarInfoController">

        <!-- Encabezado -->
        <top>
            <Label alignment="CENTER" maxWidth="Infinity" prefHeight="60" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
        </top>

        <!-- Contenido -->
        <center>
            <VBox alignment="TOP_CENTER" spacing="20" styleClass="padded-container">
                <Label styleClass="title-label" text="Modificar Información" textAlignment="CENTER" />
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>

                <!-- Matrícula (solo lectura) -->
                <Label styleClass="form-label" text="Matrícula:" />
                <Label fx:id="matriculaLabel" maxWidth="300" style="-fx-padding: 8; -fx-background-color: #F5F5F5; -fx-border-color: #DDDDDD; -fx-border-radius: 6; -fx-background-radius: 6;" />

                <!-- Nombre -->
                <Label styleClass="form-label" text="Nombre:" />
                <TextField fx:id="nombreField" maxWidth="300" promptText="Ingrese nuevo nombre" styleClass="form-textfield" />

                <!-- Teléfono -->
                <Label styleClass="form-label" text="Teléfono:" />
                <TextField fx:id="telefonoField" maxWidth="300" promptText="Ingrese nuevo teléfono (10 dígitos)" styleClass="form-textfield" />

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="20">
                    <Button onAction="#onCancelarClick" styleClass="cancel-button" text="Cancelar" />
                    <Button onAction="#onGuardarClick" styleClass="primary-button" text="Guardar" />
                </HBox>
            </VBox>
        </center>
    </BorderPane>
