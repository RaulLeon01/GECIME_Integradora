<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/pacientesAdmin.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.ConsultoriosController">

    <top>
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="80" styleClass="header-label" text="SISTEMA GESTOR DE CITAS MÉDICAS | GECIME" />
    </top>

    <center>
        <HBox alignment="TOP_LEFT" fillHeight="true" spacing="0" stylesheets="@../styles/pacientesAdmin.css">

            <!-- Menú lateral -->
            <VBox prefWidth="160" spacing="10" styleClass="side-menu">
                <padding><Insets bottom="20" left="15" right="15" top="30" /></padding>

                <Button onAction="#irAVistaPerfil" styleClass="menu-button" text="Perfil" />
                <Button onAction="#irAVistaAgendadas" styleClass="menu-button" text="Citas &#13;&#10;Agendadas" />
                <Button onAction="#irAVistaHistorial" styleClass="menu-button" text="Historial" />
                <Button onAction="#irAVistaAgendar" styleClass="menu-button" text="Agendar" />
                <Button onAction="#irAVistaPacientes" styleClass="menu-button" text="Pacientes" />
                <Button onAction="#irAVistaDoctores" styleClass="menu-button" text="Doctores" />
                <Button onAction="#irAVistaConsultorios" styleClass="menu-button" text="Consultorios" />
                <Pane prefHeight="200" prefWidth="160" />
                <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" styleClass="logout-button" text="Cerrar sesión" />
            </VBox>

            <!-- Contenido -->
            <VBox alignment="TOP_CENTER" spacing="20" styleClass="content-box" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>

                <HBox alignment="CENTER_LEFT" spacing="20" styleClass="toolbar">
                    <Label styleClass="section-title" text="Consultorios" />
                    <Region HBox.hgrow="ALWAYS" />
                    <!-- Botón nuevo -->
                    <Button onAction="#irARegistrarConsultorio" styleClass="primary-button" text="Registrar consultorio" />
                </HBox>

                <TableView fx:id="tablaConsultorios" styleClass="pacientes-table" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre" />
                        <TableColumn fx:id="colUbicacion" text="Ubicación" />
                        <TableColumn fx:id="colEstado" text="Estado" />
                        <TableColumn fx:id="colOpciones" text="Opciones" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>
</BorderPane>
